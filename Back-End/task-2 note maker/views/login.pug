extends layout.pug

block append head
  link(rel='stylesheet',href='/css/login.css')

block content
  form.form-signin(method='POST',action='/users/login')
    h1.h3.mb-3.font-weight-normal Please sign in
    label.sr-only(for='inputEmail') Username
    input#inputUsername.form-control(type='text', placeholder='Username', required='', autofocus='',name='username')
    
    label.sr-only(for='inputPassword') Password
    input#inputPassword.form-control(type='password', placeholder='Password', required='',name='password')
    
    input.btn.btn-lg.btn-primary.btn-block(type='submit',value='Sign In')  
